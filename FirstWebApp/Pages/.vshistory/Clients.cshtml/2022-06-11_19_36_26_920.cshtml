@page
@model FirstWebApp.Pages.ClientsModel
@{
}
@{
    Layout = "";
}
<br />
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge"> -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>id, name, e-mail, last login time, registration time, status</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"
    />
    <link
      rel="stylesheet"
      href=" https://cdn.datatables.net/select/1.4.0/css/select.dataTables.min.css"
    />
  </head>

<body>


    @if(!User.Identity.IsAuthenticated) {
        
    } else {
        <form method="post" asp-page="/Account/Login" asp-page-handler="Logout">
            <div class="input-group">
                <span class="ms-3 font-weight-normal position-absolute top-0 start-100">@User.Identity.Name</span>
                <button type="reset" class="ms-2 btn btn-sm btn-primary mb-4">Logout</button>
            </div>
        </form>
    }

<div class="container-fluid pt-5">
      <table id="example" class="display" style="width: 100%">
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Last Login</th>
            <th>Date of Registration</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          @foreach (var client in Model.listClients) {
          <tr>
            <td>@client.id</td>
            <td>@client.name</td>
            <td>@client.email</td>
            <td>@client.last_login</td>
            <td>@client.registration_date</td>
            <td>@client.status</td>
            <td>
              <a
                type="button"
                class="btn btn-primary"
                href="/Edit?id=@client.id"
                >Block</a
              >
              <a
                type="button"
                class="btn btn-success"
                href="/Edit?id=@client.id"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-unlock"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M11 1a2 2 0 0 0-2 2v4a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V9a2 2 0 0 1 2-2h5V3a3 3 0 0 1 6 0v4a.5.5 0 0 1-1 0V3a2 2 0 0 0-2-2zM3 8a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1H3z"
                  ></path>
                </svg>
                Unblock
              </a>
              <a class="btn btn-primary btn-sm" href="/Edit?id=@client.id"
                >Edit
              </a>
              <a
                type="button"
                class="btn btn-outline-danger"
                href="/Edit?id=@client.id"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-trash"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"
                  ></path>
                  <path
                    fill-rule="evenodd"
                    d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                  ></path>
                </svg>
              </a>
            </td>
          </tr>
          }
        </tbody>
      </table>
    </div>
  </body>
</html>
