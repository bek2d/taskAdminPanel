@page
@model FirstWebApp.Pages.CreateModel
@{
}

<br/>

<h2>Create a new client</h2>


@if (Model.errorMessage.Length > 0)
{
    <div class="alert">
        <strong>@Model.errorMessage</strong>
    </div>
}

<form method="POST">
<div class="col-md-6">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name" value="@Model.clientInfo.name"/>
            </div>
        </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="@Model.clientInfo.email" />
        </div>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="text" class="form-control" id="name" name="password" value="@Model.clientInfo.password" />
    </div>
   
  @*  <div class="col-md-6">
        <div class="form-group">
            <label>Registration date</label>
            <input type="email" class="form-control" id="email" name="registration_date" value="@Model.clientInfo.registration_date" />
        </div>
    </div>*@
    
   
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <div>
        <button class="btn btn-outline-primary" href="/" role="button"> Cancel </button>
    </div>
    
    @if (Model.successMessage.Length > 0)
    {
        <div class="alert">
            <strong>@Model.successMessage</strong>
        </div>
    }

    
</form>
