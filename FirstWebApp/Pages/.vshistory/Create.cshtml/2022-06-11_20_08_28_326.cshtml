@page
@model FirstWebApp.Pages.CreateModel
@{
}

@if (Model.errorMessage.Length > 0)
{
    <div class="alert">
        <strong>@Model.errorMessage</strong>
    </div>
}
<div class="text-center">
<h1 class="h2 mt-5 mb-4 font-weight-normal">Create an account</h1>
<form method="POST" style="max-width: 500px; margin: auto">
<input type="text" class="form-control mb-3" id="name" name="name" placeholder="Name" value="@Model.clientInfo.name" required=""/>
<input type="email" class="form-control mb-3" id="email" name="email" placeholder="Email" value="@Model.clientInfo.email" required=""/>
<input type="text" class="form-control mb-3" id="password" name="password" value="@Model.clientInfo.password" required=""/>

    <div class="mt-3">
        <button type="submit" class="btn btn-lg btn-primary mb-4">Create</button>
    </div>

@if (Model.successMessage.Length > 0)
    {
        <div class="alert">
            <strong>@Model.successMessage</strong>
        </div>
    }

</form>
</div>